generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model AudioRequest {
  id        Int      @id @default(autoincrement())
  audio     Bytes    // Stockage du fichier audio brut
  text      String?  // Texte transcrit (nullable)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("audio_requests")
}